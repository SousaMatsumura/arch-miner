{
	"binary:class": {
		"fileName": {
			"extension": [
				"class"
			]
		}
	},
	"binary:jar": {
		"fileName": {
			"extension": [
				"jar"
			]
		}
	},
	"configuration:*": {
		"fileName": {
			"extension": [
				"xml",
				"json",
				"properties",
				"yml",
				"gradle",
				"config"
			]
		}
	},
	"configuration:bower": {
		"fileName": {
			"name": [
				".bowerrc"
			]
		}
	},
	"configuration:docker": {
		"fileName": {
			"name": [
				"dockerfile"
			]
		}
	},
	"configuration:git": {
		"fileName": {
			"name": [
				".gitignore"
			]
		}
	},
	"configuration:gradle": {
		"fileName": {
			"name": [
				"gradlew",
				"gradlew.bat"
			]
		},
		"filePath": {
			"directory": [
				".gradle"
			]
		}
	},
	"configuration:license": {
		"fileName": {
			"name": [
				"license"
			]
		}
	},
	"controller:*": {
		"className": {
			"regex": [
				"\\w+Controller$"
			]
		},
		"package": {
			"regex": [
				".*\\.controller(s)?(\\..*)?"
			]
		}
	},
	"controller:controller": {
		"classAnnotation": {
			"annotation": [
				"@Controller"
			]
		}
	},
	"controller:apiEndpoint": {
		"classAnnotation": {
			"annotation": [
				"@RestController"
			]
		}
	},
	"model:*": {
		"package": {
			"regex": [
				".*\\.model(s)?(\\..*)?"
			]
		},
		"imports": {
			"startsWith": [
				"ch.digitalfondue.npjt."
			]
		}
	},
	"model:businessRule": {
		"classAnnotation": {
			"annotation": [
				"@Service"
			]
		}
	},
	"model:dao": {
		"imports": {
			"startsWith": [
				"ch.digitalfondue.npjt.ConstructorAnnotationRowMapper.Column"
			]
		}
	},
	"model:databaseQuery": {
		"fileName": {
			"extension": [
				"sql"
			]
		}
	},
	"model:repository": {
		"imports": {
			"startsWith": [
				"ch.digitalfondue.npjt.QueryRepository"
			]
		},
		"classAnnotation": {
			"annotation": [
				"@Repository",
				"@QueryRepository"
			]
		}
	},
	"view:*": {
		"filePath": {
			"directory": [
				"webapp",
				"bower_components"
			]
		}
	},
	"view:image": {
		"fileName": {
			"extension": [
				"png",
				"gif",
				"jpg",
				"jpeg",
				"svg"
			]
		}
	},
	"view:page": {
		"fileName": {
			"extension": [
				"htm",
				"html",
				"xhtml",
				"jsp",
				"jspx"
			]
		}
	},
	"view:script": {
		"fileName": {
			"extension": [
				"js",
				"ts",
				"coffee"
			]
		}
	},
	"view:style": {
		"fileName": {
			"extension": [
				"css",
				"sass",
				"less"
			]
		}
	}
}
