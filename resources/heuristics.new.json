{
	"view":{
		"fileName":{
			"extension":["htm", "html", "xhtml", "jsp", "jspx"]
		},
		"filePath":{
			"directory": ["webapp", "bower_components"]
		}
	},
	"controller":{
		"className":{
			"regex": ["\\w+Controller$"]
		},
		"classAnnotation":{
			"annotation": ["@Controller", "@RestController"]
		},
		"package":{
			"regex": [".*\\.controller(s)?(\\..*)?"]
		}
	},
	"model":{
		"imports":{
			"startsWith": [
				"ch.digitalfondue.npjt.ConstructorAnnotationRowMapper.Column",
				"ch.digitalfondue.npjt.QueryRepository"]
		},
		"classAnnotation":{
			"annotation": ["@Service", "@Repository", "@QueryRepository"]
		},
		"package":{
			"regex": [".*\\.model(s)?(\\..*)?"]
		}
	}
}